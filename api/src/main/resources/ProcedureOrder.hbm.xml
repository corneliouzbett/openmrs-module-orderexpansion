<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <joined-subclass name="org.openmrs.module.procedures.api.model.ProcedureOrder" extends="org.openmrs.Order" table="procedure_order" lazy="false">

        <key column="order_id" not-null="true" on-delete="cascade" />

        <many-to-one name="specimenSource" class="org.openmrs.Concept" column="specimen_source" />

        <property name="laterality" column="laterality" length="20" not-null="false">
            <type name="org.hibernate.type.EnumType">
                <param name="enumClass">org.openmrs.ServiceOrder$Laterality</param>
                <param name="useNamed">true</param>
            </type>
        </property>
        <property name="clinicalHistory" type="java.lang.String" column="clinical_history" length="65535" />
        <property name="numberOfRepeats" type="int" column="number_of_repeats"/>
        <many-to-one name="frequency" class="org.openmrs.OrderFrequency" />
        <many-to-one name="location" class="org.openmrs.Concept" />

        <many-to-one name="modality" class="org.openmrs.Concept" />
        <many-to-one name="relatedProcedure" class="org.openmrs.module.procedures.api.model.ProcedureOrder"  column="related_appointment_id"/>
        <many-to-one name="participant" class="org.openmrs.Provider" column="provider_id"/>
        <property name="startDatetime" type="java.util.Date" column="start_datetime" length="19" />
        <property name="endDatetime" type="java.util.Date" column="end_datetime" length="19"/>
        <many-to-one name="outcome" class="org.openmrs.Concept" />
        <many-to-one name="complication" class="org.openmrs.Condition" />
        <property name="report" type="java.lang.String" column="report" length="65535" />
    </joined-subclass>
</hibernate-mapping>